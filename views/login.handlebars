<div class="col-md-1"></div>
<div class="col-md-5"  style="border-right: 1px solid rgb(36, 33, 33); padding-right:70px" >
<h2 class="page-header">Account Login</h2>
{{#if message}}
<div class="alert alert-danger">{{message}}</div>
{{/if}}
<form method="post" action="/authentication/login">
  <div class="form-group">
    <label>Email</label>
    <input type="text" class="form-control" name="username" placeholder="Email" required>
  </div>
  <div class="form-group">
    <label>Password</label>
    <input type="password" class="form-control" name="password" placeholder="Password" required>
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
  <button type="reset" class="btn btn-danger">Reset</button>
</form>
<br>
<div class=" text-center">
  <a href="/setting/reset-password">
    <span></span>Forgot password?</a>
</div>
</div>
